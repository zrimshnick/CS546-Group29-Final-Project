<div class="individual-post" data-liked="{{liked}}">
    <div class="post-info">
        <h1>{{post.title}}</h1>
        <h2>{{post.body}}</h2>
        <h3>User: {{post.username}}</h3>
        <div class="like-section">
            <h3>Likes: {{post.likes}}</h3>
            <form name="likeForm" id="likeForm" action="/feed/{{postId}}/like" method="POST">
                <button type="submit" id="likeButton" class="like-button">&hearts;</button>
            </form>
        </div>
    </div>
    <div class="comments">
        <h3 class="comment-header">Comments:</h3>
        <div id="commentError"></div>
        <div class="add-comment">
            <form name="commentForm" id="commentForm" action="/feed/{{postId}}/add-comment" method="POST">
                <input type="text" name="commentInput" id="commentInput" placeholder="Enter Comment">
                <button type="submit" id="postCommentBtn">Post</button>
            </form>
        </div>
        <div class="current-comments">
            {{#each comments}}
            <div class="individual-comment">
                <div class="individual-comment-username">{{username}}</div>
                <div class="individual-comment-comment">{{comment}}</div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<script src="/public/js/individualPost-client.js"></script>
